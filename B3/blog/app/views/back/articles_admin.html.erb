<div class="container" style="padding: 10px 50px 50px;">
  <% if session[:adminname]==nil %>
    <text style="color:red;"> Please login first! </text>
    <br>
    <a href="/back/login"> Click me to login </a>
  <% else %>
    <center>
      <h2> Articles Admin </h2>
      <table class="table table-striped table-bordered" width='100%'>
        <thead>
          <tr>
            <th width='30%' align='left'> Title </th>
            <th width='15%' align='left'> Author </th>
            <th width='30%' align='left'> Created_at </th>
            <th width='15%' align='left'> Kinds </th>
            <th width='10%' align='left'> Read this! </th>
          </tr>
        </thead>

        <% if @articles!=nil %>
          <% @articles.each do |article| %>
            <tr>
              <td width='30%' align='left'><%= article.title %></td>
              <td width='15%' align='center'><%= article.author %></td>
              <td width='30%' align='left'><%= article.created_at %></td>
              <td width='15%' align='center'><%= article.kinds %></td>
              <td width='10%' align='center'><button type="button" name=article.id onclick='location.href="/front/article/<%= article.id %>"'>Read</button></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </center>

  <% end %>
</div>
