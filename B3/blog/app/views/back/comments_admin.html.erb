<div class="container" style="padding: 10px 50px 50px;">
  <% if session[:adminname]==nil %>
    <text style="color:red;"> Please login first! </text>
    <br>
    <a href="/back/login"> Click me to login </a>
  <% else %>
    <a href="/back/function_select"> Back </a>
    <br><br>


    <center>
      <h2> My comments </h2>
      <table class="table table-striped table-bordered" width='100%'>
        <thead>
          <tr>
            <th width='10%' align='left'> ID </th>
            <th width='40%' align='left'> Commenter </th>
            <th width='10%' align='left'> article_id </th>
            <th width='30%' align='left'> Created_at </th>
            <th width='40%' align='left'> Delete this! </th>
          </tr>
        </thead>

        <% if @comments!=nil %>
          <% @comments.each do |comment| %>
            <tr>
              <td width='10%' align='left'><%= comment.id %></td>
              <td width='40%' align='center'><%= comment.commenter %></td>
              <td width='10%' align='left'><%= comment.article_id %></td>
              <td width='30%' align='center'><%= comment.created_at %></td>
              <td width='10%' align='center'><input type="button" value="Del" onclick="if(confirm('确认删除？')){location.href='/front/delete_comment/<%= comment.id %>'}else{return false;}"></input></td>
            </tr>
          <% end %>
        <% end %>

      </table>
    </center>

  <% end %>
</div>
