<div class="container" style="padding: 10px 50px 50px;">
  <% if session[:username]==nil %>
    <text style="color:red;"> Please login first! </text>
    <br>
    <a href="/front/login"> Click me to login </a>
  <% else %>
    <text> <%= "Welcome! Your username is:#{session[:username]}" %> </text>
    <br>
    <button type="button" class="btn btn-primary" onclick="location.href='/front/search_article'">Article search</button>
    <text> &nbsp;&nbsp;&nbsp;&nbsp;</text>
    <button type="button" class="btn btn-primary" onclick="location.href='/front/write_article'">Write an article</button>
    <text> &nbsp;&nbsp;&nbsp;&nbsp;</text>
    <button type="button" class="btn btn-primary" onclick="location.href='/front/write_feedback'">Write Feedback</button>
    <text> &nbsp;&nbsp;&nbsp;&nbsp;</text>
    <button type="button" class="btn btn-primary" onclick="location.href='/front/personal_center'">Personal center</button>
    <text> &nbsp;&nbsp;&nbsp;&nbsp;</text>
    <button type="button" class="btn btn-primary" onclick="location.href='/front/logout'">Logout</button>
    <hr>

    <center>
      <h2> Articles </h2>
      <table class="table table-striped table-bordered" width='100%'>
        <thead>
          <tr>
            <th width='30%' align='left'> Title </th>
            <th width='15%' align='left'> Author </th>
            <th width='30%' align='left'> Created_at </th>
            <th width='15%' align='left'> Kinds </th>
            <th width='10%' align='left'> Read this! </th>
          </tr>
        </thead>

        <% if @articles!=nil %>
          <% @articles.each do |article| %>
            <tr>
              <td width='30%' align='left'><%= article.title %></td>
              <td width='15%' align='center'><%= article.author %></td>
              <td width='30%' align='left'><%= article.created_at %></td>
              <td width='15%' align='center'><%= article.kinds %></td>
              <td width='10%' align='center'><button type="button" name=article.id onclick='location.href="/front/article/<%= article.id %>"'>Read</button></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </center>

  <% end %>
</div>
